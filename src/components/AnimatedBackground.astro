<div class="animated-background">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
    <div class="shape shape-4"></div>
</div>

<style>
    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.2;
    }

    .shape-1 {
        background-color: #F04C26;
        width: 800px;
        height: 800px;
        top: -200px;
        left: -200px;
        animation: float 20s ease-in-out infinite alternate;
    }

    .shape-2 {
        background-color: #e7af02;
        width: 900px;
        height: 900px;
        bottom: -300px;
        right: -200px;
        animation: float 25s ease-in-out infinite alternate-reverse;
    }

    .shape-3 {
        background-color: #F04C26;
        width: 600px;
        height: 600px;
        top: 30%;
        left: 20%;
        animation: float 18s ease-in-out infinite alternate;
    }

    .shape-4 {
        background-color: #e7af02;
        width: 700px;
        height: 700px;
        top: 10%;
        right: 10%;
        animation: float 22s ease-in-out infinite alternate-reverse;
    }

    @keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }
        50% {
            transform: translate(150px, 150px) rotate(180deg);
        }
        100% {
            transform: translate(-150px, 75px) rotate(360deg);
        }
    }
</style>
